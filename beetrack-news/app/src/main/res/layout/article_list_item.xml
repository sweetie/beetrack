<?xml version="1.0" encoding="utf-8"?>
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_item"
        android:clickable="true"
        android:orientation="vertical"
        android:paddingBottom="5dp"
        android:paddingTop="5dp"
        android:weightSum="10">

        <beetrack.com.news.mvp.view.custom.CustomTextView
            android:id="@+id/title_article"
            style="@style/TextViewStyle.Heading"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="5dp"
            android:text="Title:" />

        <ImageView
            android:id="@+id/image_article"
            android:layout_width="match_parent"
            android:layout_height="140dp"
            android:scaleType="fitXY"
            android:src="@color/black" />

        <beetrack.com.news.mvp.view.custom.CustomTextView
            android:id="@+id/description_article"
            style="@style/TextViewStyle.Body"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="start"
            android:padding="5dp"
            android:text="Description:" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="6"
            android:clickable="true"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/favorite_article"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:scaleType="fitXY"
                android:layout_marginLeft="20dp"
                android:src="@drawable/bg_tab_favorite" />

            <beetrack.com.news.mvp.view.custom.CustomTextView
                android:id="@+id/author_article"
                style="@style/TextViewStyle.Caption"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="end"
                android:padding="5dp"
                android:text="Author:" />
        </LinearLayout>
    </LinearLayout>